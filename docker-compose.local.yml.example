services:
  openclaw:
    image: openclaw:local
    ports:
      - "${PORT:-8080}:${PORT:-8080}"
    environment:
      # Provider (at least one required)
      - OPENCODE_API_KEY=${OPENCODE_API_KEY}
      - OPENCLAW_PRIMARY_MODEL=opencode/kimi-k2.5
      # Auth
      # Keep these out of git; prefer setting them in a local `.env` file.
      # If OPENCLAW_GATEWAY_TOKEN is unset, the entrypoint auto-generates it and persists it.
      - AUTH_USERNAME=${AUTH_USERNAME:-admin}
      - AUTH_PASSWORD=${AUTH_PASSWORD:-}
      - OPENCLAW_GATEWAY_TOKEN=${OPENCLAW_GATEWAY_TOKEN:-}
      # Browser sidecar
      - BROWSER_CDP_URL=http://browser:9223
      - BROWSER_DEFAULT_PROFILE=openclaw
      - BROWSER_EVALUATE_ENABLED=true
      # Camofox Browser plugin (optional; requires camofox service below)
      - CAMOFOX_BROWSER_URL=http://camofox:9377
      - CAMOFOX_BROWSER_AUTOSTART=false
      - CAMOFOX_API_KEY=${CAMOFOX_API_KEY}
    volumes:
      - openclaw-data:/data
      - ./scripts/entrypoint.sh:/app/scripts/entrypoint.sh:ro
      - ./scripts/configure.js:/app/scripts/configure.js:ro
    depends_on:
      - browser
      - camofox
    restart: unless-stopped

  browser:
    image: openclaw-browser:local
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
      - CHROME_CLI=--remote-debugging-port=9222
    volumes:
      - browser-data:/config
    shm_size: 2g
    restart: unless-stopped

  camofox:
    build:
      context: ./camofox-browser
    environment:
      - CAMOFOX_PORT=9377
      - CAMOFOX_API_KEY=${CAMOFOX_API_KEY}
    shm_size: 2g
    restart: unless-stopped

volumes:
  openclaw-data:
  browser-data:

